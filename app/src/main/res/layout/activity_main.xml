<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- Toolbar for Logout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/logo_dark_purple"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header Section with Logo -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/logo_dark_purple"
        android:elevation="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/app_name"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/logo_light_pink"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/taglineText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tagline"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Search Section -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxStrokeColor="@color/logo_dark_purple"
                app:hintTextColor="@color/logo_dark_purple">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_hint"
                    android:inputType="text"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="8dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Add Pet Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addPetButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_pet"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/logo_light_pink"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                app:elevation="4dp"
                android:drawableStart="@android:drawable/ic_input_add"
                android:drawablePadding="12dp" />

            <!-- View Pets Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewPetsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_pets"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:backgroundTint="@color/logo_dark_purple"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                app:elevation="4dp"
                android:drawableStart="@android:drawable/ic_menu_view"
                android:drawablePadding="12dp" />

            <!-- Fun Decorative Elements -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¾ ðŸ• ðŸˆ ðŸ¾"
                android:textSize="32sp"
                android:layout_marginTop="32dp"
                android:alpha="0.3" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
